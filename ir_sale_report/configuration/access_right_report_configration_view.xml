<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- FORM VIEW: api.report.configration -->
    <record id="view_api_report_config_form" model="ir.ui.view">
        <field name="name">api.report.configration.form</field>
        <field name="model">api.report.configration</field>
        <field name="arch" type="xml">
            <form string="API Report Configuration">
                <header>
                    <button name="action_create_line" type="object" string="Create Line"/>
                    <button name="action_selection_customer" type="object" string="All Customer Selection"/>
                    <button name="action_selection_vendor" type="object" string="All Vendor Selection"/>
                    <button name="action_selection_user" type="object" string="All User Selection"/>
                    <button name="action_selection_brand" type="object" string="All Brand Selection"/>
                    <button name="action_selection_mc" type="object" string="All MC Selection"/>

                    <button name="action_remove_customer" type="object" string="All Customer Remove"/>
                    <button name="action_remove_vendor" type="object" string="All Vendor Remove"/>
                    <button name="action_remove_user" type="object" string="All User Remove"/>
                    <button name="action_remove_brand" type="object" string="All Brand Remove"/>
                    <button name="action_remove_mc" type="object" string="All MC Remove"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="report_type" required="1"/>
                        <field name="report_id" invisible="1"/>
                        <field name="report_ids" widget="many2many_tags" invisible="1"/>
                    </group>
                     <group>
                        <group>
                            <field name="disable_create"/>
                        </group>
                        <group>
                            <field name="disable_edit"/>
                        </group>
                        <group>
                            <field name="disable_delete"/>
                        </group>
                        <group>
                            <field name="disable_duplicate"/>
                            <field name="disable_archive"/>
                        </group>
                    </group>
                    <group>
                        <field name="customer_ids" options='{"no_open": True, "no_create": True}'
                               widget="many2many_tags"
                               invisible="report_type not in ['quality.report', 'pps.lab', 'measurement.report', 'component_report', 'sale_order', 'sample_planning', 'production_planning', 'sale_fabric']"/>
                        <field name="vendor_ids" options='{"no_open": True, "no_create": True}' widget="many2many_tags"
                               invisible="report_type not in ['measurement.report', 'component_report', 'sale_order', 'sample_planning', 'production_planning', 'sale_fabric']"/>
                        <field name="user_ids" options='{"no_open": True, "no_create": True}' widget="many2many_tags"
                               invisible="report_type not in ['sale_order', 'sample_planning', 'production_planning', 'sale_fabric']"/>
                        <field name="brand_ids" options='{"no_open": True, "no_create": True}' widget="many2many_tags"
                               invisible="report_type not in ['quality.report', 'pps.lab', 'measurement.report', 'component_report', 'sale_order', 'sample_planning', 'production_planning', 'sale_fabric']"/>
                        <field name="product_cat_ids" options='{"no_open": True, "no_create": True}'
                               widget="many2many_tags"
                               invisible="report_type not in ['quality.report', 'pps.lab', 'measurement.report', 'component_report', 'sale_order', 'sample_planning', 'production_planning', 'sale_fabric']"/>
                    </group>
                    <notebook>
                        <page string="Fields Configuration">
                            <button name="action_selection_readonly" type="object" string="All Readonly" class="m-2"/>
                            <button name="action_remove_readonly" type="object" string="All Remove Readonly"
                                    class="m-2"/>
                            <button name="action_selection_invisible" type="object" string="All Invisible" class="m-2"/>
                            <button name="action_remove_invisible" type="object" string="All Remove Invisible"
                                    class="m-2"/>
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="field_id" options='{"no_open": True, "no_create": True}'
                                           domain="[('model_id', 'in', parent.report_ids)]"/>
                                    <field name="is_readonly"/>
                                    <field name="is_invisible"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- TREE VIEW: api.report.configration -->
    <record id="view_api_report_config_tree" model="ir.ui.view">
        <field name="name">api.report.configration.tree</field>
        <field name="model">api.report.configration</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="user_id"/>
                <field name="report_type"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_api_report_config" model="ir.actions.act_window">
        <field name="name">Report Access Right Config</field>
        <field name="res_model">api.report.configration</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_api_report_config_search" model="ir.ui.view">
        <field name="name">api.report.configration.search</field>
        <field name="model">api.report.configration</field>
        <field name="arch" type="xml">
            <search string="Search View">

                <field name="name"/>
                <field name="user_id"/>
                <field name="report_type"/>

                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="name" string="Name" context="{'group_by':'name'}"/>
                    <filter name="report_type" string="Report" context="{'group_by':'report_type'}"/>
                    <filter name="user_id" string="User" context="{'group_by':'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_api_report_root" name="Report Access Right" groups="ir_sale_report.group_report_access_right"
              sequence="10"/>
    <menuitem id="menu_api_report_config" name="Configurations" parent="menu_api_report_root" sequence="20"/>
    <menuitem id="menu_api_report_config_action" name="Field Config" parent="menu_api_report_config"
              action="action_api_report_config" sequence="30"/>

</odoo>
