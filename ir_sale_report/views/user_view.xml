<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_users_view_form_report_view" model="ir.ui.view">
            <field name="name">res.users.view.form.inherit.calendar</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <notebook colspan="4" position="inside">
                    <page string="Report Configration">
                        <group>
                            <group>
                                <field name="sale_order_report_id" options='{ "no_create": True}' readonly="1"/>
                                <field name="sample_planning_report_id" options='{ "no_create": True}' readonly="1"/>
                            </group>
                            <group>
                                <field name="fabric_yardage_report_id" options='{ "no_create": True}' readonly="1"/>
                                <field name="production_planing_report_id" options='{ "no_create": True}' readonly="1"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
    </record>

     <record id="server_action_call_custom_notify" model="ir.actions.server">
        <field name="name">Update User View</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="state">code</field>
        <field name="binding_model_id" ref="base.model_res_users"/>
        <field name="binding_type">action</field>
        <field name="code">action = records.action_custom_user_view()</field>
    </record>
</odoo>