<odoo>
    <!-- Tree View -->
    <record id="view_sample_planing_tree" model="ir.ui.view">
        <field name="name">sample.planing.tree</field>
        <field name="model">sample.planing</field>
        <field name="arch" type="xml">
            <list string="Sample Planning" editable="bottom">
                 <button name="action_open_form_view" type="object" icon="fa-eye" title="Open Form"
                        class="btn btn-link icon-only"/>
                <field name="is_favorite" widget="boolean_favorite" optional="show" nolabel="1"/>
                <field name="date"/>
                <field name="product_id" options='{"no_open": True, "no_create": True}'/>
                <field name="party_id" options='{"no_open": True, "no_create": True}'/>
                <field name="product_cat_id" options='{"no_open": True, "no_create": True}'/>
                <field name="mrp" sum="MRP"/>
                <field name="spec"/>
                <field name="fabric"/>
                <field name="vendor_id" options='{"no_open": True, "no_create": True}'/>
                <field name="washing_id" options='{"no_open": True, "no_create": True}'/>
                <field name="washing"/>
                <field name="merchant_id" options='{"no_open": True, "no_create": True}'/>
                <field name="merchant_comment"/>
                <field name="merchant_1_comment"/>
                <field name="image_1"/>
                <field name="image_2"/>
                <field name="spc_pfd"/>
                <field name="tec_pack"/>
                <field name="ref"/>
                <field name="sample_qty" sum="SAMPLE QTY"/>
                <field name="status"/>
                <field name="status_date"/>
                <field name="delivery_date"/>
                <field name="col_1"/>
                <field name="col_2"/>
                <field name="col_3"/>
                <field name="col_4"/>
                <field name="col_5"/>
                <field name="col_6"/>
                <field name="fabric_book_date"/>
                <field name="fabric_received_date"/>
                <field name="fabric_received_status"/>

                <field name="trims_book_date"/>
                <field name="trims_received_date"/>
                <field name="trims_received_status"/>

                <field name="trims_1_book_date"/>
                <field name="trims_1_received_date"/>
                <field name="trims_1_received_status"/>

                <field name="trims_2_book_date"/>
                <field name="trims_2_received_date"/>
                <field name="trims_2_received_status"/>

                <field name="trims_3_book_date"/>
                <field name="trims_3_received_date"/>
                <field name="trims_3_received_status"/>

                <field name="trims_4_book_date"/>
                <field name="trims_4_received_date"/>
                <field name="trims_4_received_status"/>

                <field name="cutting_book_date"/>
                <field name="cutting_received_date"/>
                <field name="cutting_received_status"/>

                <field name="stitching_book_date"/>
                <field name="stitching_received_date"/>
                <field name="stitching_received_status"/>

                <field name="print_book_date"/>
                <field name="print_received_date"/>
                <field name="print_received_status"/>

                <field name="emb_book_date"/>
                <field name="emb_received_date"/>
                <field name="emb_received_status"/>

                <field name="washing_book_date"/>
                <field name="washing_received_date"/>
                <field name="washing_received_status"/>

                <field name="finishing_book_date"/>
                <field name="finishing_received_date"/>
                <field name="finishing_received_status"/>

                <field name="packing_book_date"/>
                <field name="packing_received_date"/>
                <field name="packing_received_status"/>

                <field name="delivery_book_date"/>
                <field name="delivery_received_date"/>
                <field name="delivery_received_status"/>

            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sample_planing_form" model="ir.ui.view">
        <field name="name">sample.planing.form</field>
        <field name="model">sample.planing</field>
        <field name="arch" type="xml">
            <form string="Sample Planning">
                <sheet>
                    <group>
                        <group>
                            <field name="is_favorite"/>
                            <field name="product_id"/>
                            <field name="party_id"/>
                            <field name="product_cat_id"/>
                            <field name="mrp"/>
                            <field name="spec"/>
                            <field name="fabric"/>
                            <field name="vendor_id"/>
                            <field name="washing_id"/>
                            <field name="washing"/>
                            <field name="merchant_id"/>
                        </group>
                        <group>
                            <field name="merchant_comment"/>
                            <field name="merchant_1_comment"/>
                            <field name="image_1" widget="image"/>
                            <field name="image_2" widget="image"/>
                            <field name="spc_pfd"/>
                            <field name="tec_pack"/>
                            <field name="ref"/>
                            <field name="sample_qty"/>
                            <field name="status"/>
                            <field name="status_date"/>
                            <field name="delivery_date"/>
                        </group>
                    </group>
                    <group string="Color Details">
                        <field name="col_1"/>
                        <field name="col_2"/>
                        <field name="col_3"/>
                        <field name="col_4"/>
                        <field name="col_5"/>
                        <field name="col_6"/>
                    </group>
                    <group string="Fabric">
                        <field name="fabric_book_date"/>
                        <field name="fabric_received_date"/>
                        <field name="fabric_received_status"/>
                    </group>
                    <group string="Trims">
                        <field name="trims_book_date"/>
                        <field name="trims_received_date"/>
                        <field name="trims_received_status"/>

                        <field name="trims_1_book_date"/>
                        <field name="trims_1_received_date"/>
                        <field name="trims_1_received_status"/>

                        <field name="trims_2_book_date"/>
                        <field name="trims_2_received_date"/>
                        <field name="trims_2_received_status"/>

                        <field name="trims_3_book_date"/>
                        <field name="trims_3_received_date"/>
                        <field name="trims_3_received_status"/>

                        <field name="trims_4_book_date"/>
                        <field name="trims_4_received_date"/>
                        <field name="trims_4_received_status"/>
                    </group>
                    <group string="Operations">
                        <field name="cutting_book_date"/>
                        <field name="cutting_received_date"/>
                        <field name="cutting_received_status"/>

                        <field name="stitching_book_date"/>
                        <field name="stitching_received_date"/>
                        <field name="stitching_received_status"/>

                        <field name="print_book_date"/>
                        <field name="print_received_date"/>
                        <field name="print_received_status"/>

                        <field name="emb_book_date"/>
                        <field name="emb_received_date"/>
                        <field name="emb_received_status"/>
                    </group>
                    <group string="Finishing">
                        <field name="washing_book_date"/>
                        <field name="washing_received_date"/>
                        <field name="washing_received_status"/>

                        <field name="finishing_book_date"/>
                        <field name="finishing_received_date"/>
                        <field name="finishing_received_status"/>

                        <field name="packing_book_date"/>
                        <field name="packing_received_date"/>
                        <field name="packing_received_status"/>
                    </group>
                    <group string="Delivery">
                        <field name="delivery_book_date"/>
                        <field name="delivery_received_date"/>
                        <field name="delivery_received_status"/>
                    </group>
                    <field name="active"/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_sample_planing_search" model="ir.ui.view">
        <field name="name">sample.planing.search</field>
        <field name="model">sample.planing</field>
        <field name="arch" type="xml">
            <search string="Search View">
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="product_cat_id" string="MC" context="{'group_by':'product_cat_id'}"/>
                    <filter name="party_id" string="Party" context="{'group_by':'party_id'}"/>
                    <filter name="vendor_id" string="Fabric Supplier" context="{'group_by':'vendor_id'}"/>
                    <filter name="washing_id" string="Washing" context="{'group_by':'washing_id'}"/>
                    <filter name="merchant_id" string="Merchant" context="{'group_by':'merchant_id'}"/>
                    <filter name="product_id" string="Product" context="{'group_by':'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sample_planing" model="ir.actions.act_window">
        <field name="name">Sample Planning</field>
        <field name="res_model">sample.planing</field>
        <field name="view_mode">list,form,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Sample Planning
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_sample_planing_main_root" name="Sample Planning" parent="ir_sale_report.menu_reporting_root" sequence="10"
              groups="ir_sale_report.group_sample_planing_report_access_right,base.group_erp_manager"
              />

    <menuitem id="menu_sample_planing_main" name="Sample Planning" parent="ir_sale_report.menu_sample_planing_main_root" sequence="10"
              groups="ir_sale_report.group_sample_planing_report_access_right,base.group_erp_manager"
              action="action_sample_planing"/>
</odoo>
