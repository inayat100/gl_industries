<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree View -->
    <record id="view_sales_report_line_tree" model="ir.ui.view">
        <field name="name">sales.order.fabric.tree</field>
        <field name="model">sales.order.fabric</field>
        <field name="arch" type="xml">
            <list string="Sales Order Fabric"  sample="1" class="o_sale_order" editable="top">
                 <button name="action_open_form_view" type="object" icon="fa-eye" title="Open Form"
                        class="btn btn-link icon-only"/>
                <field name="is_favorite" widget="boolean_favorite" optional="show" nolabel="1"/>
                <field name="sl_no"/>
                <field name="date"/>
                <field name="product_id" options='{"no_open": True, "no_create": True}'/>
                <field name="image" widget="image" options="{'preview_image': 'image'}"/>
                <field name="sorts_no"/>
                <field name="fabric_colour_id" options='{"no_open": True, "no_create": True}'/>
                <field name="fabric_mill"/>
                <field name="vendor_id" options='{"no_open": True, "no_create": True}'/>
                <field name="qty" sum="Qty"/>
                <field name="fit_measurement_id" options='{"no_open": True, "no_create": True}'/>
                <field name="fabric_category_id" options='{"no_open": True, "no_create": True}'/>
                <field name="content"/>
                <field name="count"/>
                <field name="construction"/>
                <field name="weight"/>
                <field name="pantone_no"/>
                <field name="merchant_id" options='{"no_open": True, "no_create": True}'/>
                <field name="merchant_2"/>
                <field name="party_id"/>
                <field name="status"/>
                <field name="status_date"/>
                <field name="remarks_1"/>
                <field name="remarks_2"/>
                <field name="remark_date"/>
                <field name="style_no"/>
                <field name="development_image"/>
                <field name="col_1"/>
                <field name="col_2"/>
                <field name="col_3"/>
                <field name="col_4"/>
                <field name="col_5"/>
                <field name="col_6"/>
                <field name="col_7"/>
                <field name="col_8"/>
                <field name="col_9"/>
                <field name="col_10"/>
                <field name="col_11"/>
                <field name="col_12"/>
            </list>
        </field>
    </record>

    <record id="view_sales_order_fabric_form" model="ir.ui.view">
    <field name="name">sales.order.fabric.form</field>
    <field name="model">sales.order.fabric</field>
    <field name="arch" type="xml">
        <form string="Sales Order Fabric">
            <sheet>
                <group>
                    <group>
                        <field name="is_favorite"/>
                        <field name="header"/>
                        <field name="sl_no"/>
                        <field name="date"/>
                        <field name="product_id"/>
                        <field name="sorts_no"/>
                        <field name="image" widget="image"/>
                        <field name="fabric_colour_id"/>
                        <field name="fabric_mill"/>
                        <field name="vendor_id"/>
                        <field name="qty"/>
                        <field name="hanger_fabric"/>
                        <field name="fit_measurement_id"/>
                        <field name="fabric_category_id"/>
                        <field name="content"/>
                        <field name="count"/>
                        <field name="construction"/>
                        <field name="weight"/>
                        <field name="pantone_no"/>
                        <field name="location_rack_no"/>
                    </group>
                    <group>
                        <field name="merchant_id"/>
                        <field name="merchant_2"/>
                        <field name="party_id"/>
                        <field name="product_cat_id"/>
                        <field name="garment_development"/>
                        <field name="status"/>
                        <field name="status_date"/>
                        <field name="remarks_1"/>
                        <field name="remarks_2"/>
                        <field name="remark_date"/>
                        <field name="style_no"/>
                        <field name="development_image" widget="image"/>
                        <field name="col_1"/>
                        <field name="col_2"/>
                        <field name="col_3"/>
                        <field name="col_4"/>
                        <field name="col_5"/>
                        <field name="col_6"/>
                        <field name="col_7"/>
                        <field name="col_8"/>
                        <field name="col_9"/>
                        <field name="col_10"/>
                        <field name="col_11"/>
                        <field name="col_12"/>
                        <field name="active"/>
                    </group>
                </group>
            </sheet>
            <chatter/>
        </form>
    </field>
</record>


    <record id="view_sales_order_fabric_search" model="ir.ui.view">
        <field name="name">sales.order.fabric.search</field>
        <field name="model">sales.order.fabric</field>
        <field name="arch" type="xml">
            <search string="Search View">
                <field name="product_id" string="Product"/>
                
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="product_cat_id" string="MC" context="{'group_by':'product_cat_id'}"/>
                    <filter name="party_id" string="BUYER NAME" context="{'group_by':'party_id'}"/>
                    <filter name="vendor_id" string="Fabric Supplier" context="{'group_by':'vendor_id'}"/>
                    <filter name="fabric_category_id" string="FABRIC CATEGORY" context="{'group_by':'fabric_category_id'}"/>
                    <filter name="merchant_id" string="Merchant" context="{'group_by':'merchant_id'}"/>
                    <filter name="product_id" string="Product" context="{'group_by':'product_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Action -->
    <record id="action_sales_report_line" model="ir.actions.act_window">
        <field name="name">Fabric YARDAGE</field>
        <field name="res_model">sales.order.fabric</field>
        <field name="view_mode">list,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first sales order fabric</p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_sales_report_line_root" name="Fabric Yardage Report"
              groups="ir_sale_report.group_sales_order_fabric_yardage_report_access_right,base.group_erp_manager"
              parent="ir_sale_report.menu_reporting_root"
    />

    <menuitem id="menu_sales_report_line" name="Fabric Yardage Report"
              parent="ir_sale_report.menu_sales_report_line_root"
              action="action_sales_report_line"
              groups="ir_sale_report.group_sales_order_fabric_yardage_report_access_right,base.group_erp_manager"
              sequence="50"
    />



</odoo>