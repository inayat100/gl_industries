        </record>

        <record id="sample_planing_report_record_rule" model="ir.rule">
            <field name="name">Sample Planing Report Record Rule</field>
            <field name="model_id" ref="model_sample_planing"/>
            <field name="domain_force">[('party_id', 'in', user.sample_planning_report_id.customer_ids.ids), ('vendor_id', 'in', user.sample_planning_report_id.vendor_ids.ids), ('merchant_id', 'in', user.sample_planning_report_id.user_ids.ids), ('product_cat_id', 'in', user.sample_planning_report_id.product_cat_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('group_sample_planing_report_access_right'))]"/>
        </record>

        <record id="sales_order_fabric_yardage_report_record_rule" model="ir.rule">
            <field name="name">Fabric Yardage Report Record Rule</field>
            <field name="model_id" ref="model_sales_order_fabric"/>
            <field name="domain_force">[('party_id', 'in', user.fabric_yardage_report_id.customer_ids.ids), ('vendor_id', 'in', user.fabric_yardage_report_id.vendor_ids.ids), ('merchant_id', 'in', user.fabric_yardage_report_id.user_ids.ids), ('product_cat_id', 'in', user.fabric_yardage_report_id.product_cat_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('group_sales_order_fabric_yardage_report_access_right'))]"/>
        </record>
    </data>
</odoo>