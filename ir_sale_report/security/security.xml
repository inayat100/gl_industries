<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="group_report_access_right" model="res.groups">
            <field name="name">Custom Report Access Right</field>
        </record>

         <record id="group_sale_order_report_access_right" model="res.groups">
            <field name="name">Sale Order Report Access Right</field>
        </record>

        <record id="group_production_planing_report_access_right" model="res.groups">
            <field name="name">Production Planing Access Right</field>
        </record>

        <record id="group_sample_planing_report_access_right" model="res.groups">
            <field name="name">Sample Planing Access Right</field>
        </record>

        <record id="group_sales_order_fabric_yardage_report_access_right" model="res.groups">
            <field name="name">Fabric Yardage Access Right</field>
        </record>

        <record id="sale_order_report_record_rule" model="ir.rule">
            <field name="name">Sale Order Report Record Rule</field>
            <field name="model_id" ref="model_sale_order_report"/>
            <field name="domain_force">[('party_id', 'in', user.sale_order_report_id.customer_ids.ids), ('vendor_id', 'in', user.sale_order_report_id.vendor_ids.ids), ('brand_id', 'in', user.sale_order_report_id.brand_ids.ids), ('product_cat_id', 'in', user.sale_order_report_id.product_cat_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('group_sale_order_report_access_right'))]"/>
        </record>

        <record id="production_planing_report_record_rule" model="ir.rule">
            <field name="name">Production Planing Report Record Rule</field>
            <field name="model_id" ref="model_production_planing"/>
