<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree/List View -->
    <record id="view_quality_report_feed_off_machine_tree" model="ir.ui.view">
        <field name="name">quality.report.feed.off.machine.tree</field>
        <field name="model">quality.report.feed.off.machine</field>
        <field name="arch" type="xml">
            <list string="Feed Off Machines" default_order="id desc">
                <field name="route_id"/>
                <field name="process_id"/>
                <field name="process_remark"/>
                <field name="machine_name"/>
                <field name="machine_no"/>
                <field name="operator_name"/>
                <field name="spi"/>
                <field name="roll_no"/>
                <field name="remark"/>
                <field name="remark1"/>
                <field name="fabricator_name_id"/>
                <field name="product_qt_id"/>
                <field name="product_qt_cat_id"/>
                <field name="qty"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_quality_report_feed_off_machine_form" model="ir.ui.view">
        <field name="name">quality.report.feed.off.machine.form</field>
        <field name="model">quality.report.feed.off.machine</field>
        <field name="arch" type="xml">
            <form string="Feed Off Machine">
                <sheet>
                    <group>
                        <field name="route_id"/>
                        <field name="process_id"/>
                        <field name="process_remark"/>
                        <field name="machine_name"/>
                        <field name="machine_no"/>
                        <field name="operator_name"/>
                        <field name="spi"/>
                        <field name="roll_no"/>
                        <field name="remark"/>
                        <field name="remark1"/>
                    </group>
                    <group>
                        <field name="fabricator_name_id" readonly="1"/>
                        <field name="product_qt_id" readonly="1"/>
                        <field name="product_qt_cat_id" readonly="1"/>
                        <field name="qty" readonly="1"/>
                        <field name="quality_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_quality_report_feed_off_machine" model="ir.actions.act_window">
        <field name="name">Feed Off Machines</field>
        <field name="res_model">quality.report.feed.off.machine</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'create': 0, 'edit':0, 'delete': 0}</field>
    </record>

    <record id="view_quality_report_feed_off_machine_search" model="ir.ui.view">
        <field name="name">quality.report.feed.off.machine.search</field>
        <field name="model">quality.report.feed.off.machine</field>
        <field name="arch" type="xml">
            <search string="Feed Off Machines">
                <!-- Quick search fields -->
                <field name="process_id"/>
                <field name="machine_name"/>
                <field name="machine_no"/>
                <field name="operator_name"/>
                <field name="spi"/>
                <field name="roll_no"/>
                <field name="fabricator_name_id"/>
                <field name="product_qt_id"/>
                <field name="product_qt_cat_id"/>
                <field name="remark"/>
                <field name="remark1"/>

                <!-- Filters -->
                <filter name="filter_process" string="By Process" domain="[]" context="{'group_by': 'process_id'}"/>
                <filter name="filter_operator" string="By Operator" domain="[]" context="{'group_by': 'operator_name'}"/>
                <filter name="filter_machine" string="By Machine" domain="[]" context="{'group_by': 'machine_name'}"/>
                <filter name="filter_fabricator" string="By Fabricator" domain="[]" context="{'group_by': 'fabricator_name_id'}"/>
                <filter name="filter_mc" string="By MC" domain="[]" context="{'group_by': 'product_qt_cat_id'}"/>

                <!-- Group By Dropdown -->
                <group expand="0" string="Group By">
                    <filter name="group_by_process" string="Process" context="{'group_by': 'process_id'}"/>
                    <filter name="group_by_operator" string="Operator" context="{'group_by': 'operator_name'}"/>
                    <filter name="group_by_machine" string="Machine" context="{'group_by': 'machine_name'}"/>
                    <filter name="group_by_fabricator" string="Fabricator" context="{'group_by': 'fabricator_name_id'}"/>
                    <filter name="group_by_mc" string="MC" context="{'group_by': 'product_qt_cat_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Menu Item (under Quality Report main menu) -->
    <menuitem id="menu_quality_report_feed_off_machine_root"
              name="Feed Off Machines"
              parent="ir_reports.menu_quality_root"
              action="action_quality_report_feed_off_machine"
              sequence="20"/>
</odoo>