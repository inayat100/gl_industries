<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_quality_report_list" model="ir.ui.view">
        <field name="name">quality.report.list</field>
        <field name="model">quality.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="fabricator_name_id"/>
                <field name="product_id"/>
                <field name="brand_id"/>
                <field name="qty"/>
                <field name="no_of_operator"/>
                <field name="cutting_remark"/>
                <field name="remark"/>
                <field name="status"/>
                <field name="delivery_date"/>
            </list>
        </field>
    </record>

    <record id="view_quality_report_form" model="ir.ui.view">
        <field name="name">quality.report.form</field>
        <field name="model">quality.report</field>
        <field name="arch" type="xml">
            <form string="Quality Report">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date" required="1"/>
                            <field name="fabricator_name_id" required="1" options='{"no_open": True, "no_create": True}'/>
                            <field name="location"/>
                            <field name="product_id" required="1" options='{"no_open": True, "no_create": True}'/>
                            <field name="product_cat_id" options='{"no_open": True, "no_create": True}'/>
                            <field name="qty" required="1"/>
                            <field name="img" widget="image" class="oe_avatar"
                               options="{'preview_image': 'image_128'}"/>
                        </group>
                        <group>
                            <field name="cutting_issue_date" required="1"/>
                            <field name="brand_id"/>
                            <field name="cutting_remark"/>
                            <field name="seller_sample"/>
                            <field name="no_of_operator" required="1"/>
                            <field name="status"/>
                            <field name="delivery_date"/>
                            <field name="remark"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Trims">
                            <group>
                                <field name="trims_route_id" options='{"no_open": True, "no_create": True}'/>
                            </group>
                            <field name="trims_lines">
                                <list editable="bottom">
                                    <field name="process_id" options='{"no_open": True, "no_create": True}'/>
                                    <field name="process_remark"/>
                                    <field name="product_id" options='{"no_open": True, "no_create": True}'/>
                                    <field name="receive"/>
                                    <field name="product_cat_id" options='{"no_open": True, "no_create": True}'/>
                                    <field name="remark"/>
                                    <field name="remark1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Sewing">
                            <group>
                                <field name="sewing_route_id" options='{"no_open": True, "no_create": True}'/>
                            </group>
                            <field name="sewing_machine_lines">
                                <list editable="bottom">
                                    <field name="process_id" options='{"no_open": True, "no_create": True}'/>
                                    <field name="process_remark"/>
                                    <field name="machine_name"/>
                                    <field name="machine_no"/>
                                    <field name="operator_name"/>
                                    <field name="spi"/>
                                    <field name="roll_no"/>
                                    <field name="remark"/>
                                    <field name="remark1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Feed Off">
                            <group>
                                <field name="feed_route_id" options='{"no_open": True, "no_create": True}'/>
                            </group>
                            <field name="feed_lines">
                                <list editable="bottom">
                                    <field name="process_id" options='{"no_open": True, "no_create": True}'/>
                                    <field name="process_remark"/>
                                    <field name="machine_name"/>
                                    <field name="machine_no"/>
                                    <field name="operator_name"/>
                                    <field name="spi"/>
                                    <field name="roll_no"/>
                                    <field name="remark"/>
                                    <field name="remark1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Construction">
                            <group>
                                <field name="construction_route_id" options='{"no_open": True, "no_create": True}'/>
                            </group>
                            <field name="construction_lines">
                                <list editable="bottom">
                                    <field name="process_id" options='{"no_open": True, "no_create": True}'/>
                                    <field name="process_remark"/>
                                    <field name="position"/>
                                    <field name="operator_name"/>
                                    <field name="roll_no"/>
                                    <field name="remark"/>
                                    <field name="remark1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_quality_report_search" model="ir.ui.view">
        <field name="name">quality.report.search</field>
        <field name="model">quality.report</field>
        <field name="arch" type="xml">
            <search string="Search View">
                <field name="product_id"/>
                <field name="fabricator_name_id"/>

                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="fabricator_name_id" string="FABRICATOR Name" context="{'group_by':'fabricator_name_id'}"/>
                    <filter name="product_id" string="STYLE NO" context="{'group_by':'product_id'}"/>
                    <filter name="status" string="Status" context="{'group_by':'status'}"/>
                    <filter name="product_cat_id" string="MC" context="{'group_by':'product_cat_id'}"/>
                    <filter name="brand_id" string="Brand" context="{'group_by':'brand_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_quality_report" model="ir.actions.act_window">
        <field name="name">Quality Reports</field>
        <field name="res_model">quality.report</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first quality report
            </p>
        </field>
    </record>

    <menuitem id="menu_quality_root" name="Quality" sequence="10" groups="ir_reports.group_quality_report_access_right"/>
    <menuitem id="menu_quality_reports" name="Quality Reports" parent="menu_quality_root" sequence="10"/>
    <menuitem id="menu_quality_report" name="Reports" parent="menu_quality_reports" action="action_quality_report"/>
</odoo>