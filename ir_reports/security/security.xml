<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="group_measurement_report_access_right" model="res.groups">
            <field name="name">Measurement Report Access Right</field>
        </record>

        <record id="measurement_report_record_rule" model="ir.rule">
            <field name="name">Measurement Report Record Rule</field>
            <field name="model_id" ref="model_measurement_report"/>
            <field name="domain_force">
                [
                '|', ('fabricator_name_id', 'in', user.measurement_report_id.customer_ids.ids), ('fabricator_name_id', '=', False),
                '|', ('master_name_id', 'in', user.measurement_report_id.vendor_ids.ids), ('master_name_id', '=', False),
                '|', ('brand_id', 'in', user.measurement_report_id.brand_ids.ids), ('brand_id', '=', False),
                '|', ('stage_id', 'in', user.measurement_report_id.stage_ids.ids), ('stage_id', '=', False),
                '|', ('product_cat_id', 'in', user.measurement_report_id.product_cat_ids.ids), ('product_cat_id',
                '=', False),
                ]
            </field>
            <field name="groups" eval="[(4, ref('group_measurement_report_access_right'))]"/>
        </record>


        <record id="group_pps_report_access_right" model="res.groups">
            <field name="name">PPS Report Access Right</field>
        </record>

        <record id="pps_report_record_rule" model="ir.rule">
            <field name="name">PPS Report Record Rule</field>
            <field name="model_id" ref="model_pps_lab"/>
            <field name="domain_force">
                [
                '|', ('party_id', 'in', user.pps_report_id.customer_ids.ids), ('party_id', '=', False),
                '|', ('document_type', '=', user.pps_report_id.document_type), ('document_type', '=', False),
                '|', ('brand_id', 'in', user.pps_report_id.brand_ids.ids), ('brand_id', '=', False),
                '|', ('product_cat_id', 'in', user.pps_report_id.product_cat_ids.ids), ('product_cat_id',
                '=', False),
                ]
            </field>
            <field name="groups" eval="[(4, ref('group_pps_report_access_right'))]"/>
        </record>


        <record id="group_quality_report_access_right" model="res.groups">
            <field name="name">PPS Report Access Right</field>
        </record>

        <record id="quality_report_record_rule" model="ir.rule">
            <field name="name">PPS Report Record Rule</field>
            <field name="model_id" ref="model_pps_lab"/>
            <field name="domain_force">
                [
                '|', ('fabricator_name_id', 'in', user.quality_report_id.customer_ids.ids), ('fabricator_name_id', '=', False),
                '|', ('brand_id', 'in', user.quality_report_id.brand_ids.ids), ('brand_id', '=', False),
                '|', ('product_cat_id', 'in', user.quality_report_id.product_cat_ids.ids), ('product_cat_id',
                '=', False),
                ]
            </field>
            <field name="groups" eval="[(4, ref('group_quality_report_access_right'))]"/>
        </record>

    </data>
</odoo>