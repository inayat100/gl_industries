<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record id="group_bom_route_access_right_id" model="res.groups">
            <field name="name">BOM Route Access Right</field>
        </record>

        <record id="group_bom_route_access_right" model="res.groups">
            <field name="name">BOM Access Right</field>
        </record>

        <record id="mrp_bom_report_record_rule" model="ir.rule">
            <field name="name">MRP Bom Report Record Rule</field>
            <field name="model_id" ref="mrp.model_mrp_bom"/>
            <field name="domain_force">
                [
                '|', ('product_cat_id', 'in', user.bom_report_id.product_cat_ids.ids), ('product_cat_id', '=', False),
                '|', ('brand_id', 'in', user.bom_report_id.brand_ids.ids), ('brand_id', '=', False),
                '|', ('product_design_type_id', 'in', user.bom_report_id.product_design_type_ids.ids), ('product_design_type_id', '=', False),
                '|', ('color_id', 'in', user.bom_report_id.color_ids.ids), ('color_id', '=', False),
                ]
            </field>
            <field name="groups" eval="[(4, ref('group_bom_route_access_right'))]"/>
        </record>

        <record id="group_bom_line_route_access_right" model="res.groups">
            <field name="name">BOM Line Access Right</field>
        </record>
    </data>
</odoo>